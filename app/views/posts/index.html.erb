<div>
  <%= image_tag("main.jpg", class: "img-cover") %>
</div>

<h3 class="mb-5">All Posts</h3>

<div class="d-flex col-md-12 justify-content-md-between">
  <div>
    <% @post.each do |post| %>
      <div class="alert post-bg">
        <h3 class="mb-3"><%= post.title %></h3>
        <p class="mb-5"><%= truncate(post.body, length: 100) %></p>
        <div class="d-flex justify-content-between align-items-end">
          <div class="d-flex">
            <%= link_to "Read more..", post_path(post), class: 'btn btn-default' %>
            <%= link_to "Edit", edit_post_path(post), class: 'btn btn-warning mx-3' %>
            <%= button_to "Delete post", post_path(post), method: :delete,
                          data:                                   { confirm: "You are sure?" }, class: 'btn btn-danger'
            %>
          </div>
          <div class="d-flex">
            <%= link_to fa_icon('thumbs-up'), post_path(post), class: "px-3 fs-2" %>
            <%= link_to fa_icon('thumbs-down'), post_path(post), class: "px-3 fs-2" %>
            <%= link_to fa_icon('star'), post_path(post), class: "px-3 fs-2" %>
          </div>
        </div>
      </div>
      <hr>
    <% end %>
  </div>

  <div class="col-md-3 post-bg">
    <h4 class="my-5">Most interesting posts</h4>
    <div class="d-flex flex-column">
      <% interesting_post = @post.sample(3) %>
      <% interesting_post.each do |post| %>
        <div class="d-flex justify-content-between my-3">
          <p><%= post.title %></p>
          <%= link_to "Read more..", post_path(post), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>

    <h4 class="my-5">Most interesting people</h4>
    <p>Coming soon...</p>
  </div>
</div>
